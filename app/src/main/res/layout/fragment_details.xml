<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.DetailsFragment">

    <TextView
        android:id="@+id/ageLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/header_text_size"
        android:text="@string/age_label"/>

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ageLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/ageLabelTextView"
        android:textSize="@dimen/detail_info_text_size"
        android:padding="4dp"
        tools:text="99"/>

    <TextView
        android:id="@+id/genderLabelTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ageLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/ageTextView"
        android:textSize="@dimen/header_text_size"
        android:text="@string/gender_label"/>

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ageTextView"
        app:layout_constraintTop_toBottomOf="@id/genderLabelTextview"
        android:textSize="@dimen/detail_info_text_size"
        android:padding="4dp"
        tools:text="Male" />

    <TextView
        android:id="@+id/countryCodeLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ageLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/genderTextView"
        android:textSize="@dimen/header_text_size"
        android:text="@string/country_code_label"/>

    <TextView
        android:id="@+id/countryCodeTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ageTextView"
        app:layout_constraintTop_toBottomOf="@id/countryCodeLabelTextView"
        android:textSize="@dimen/detail_info_text_size"
        android:padding="4dp"
        tools:text="US" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="@id/countryCodeTextview"
        app:layout_constraintBottom_toBottomOf="@id/countryCodeTextview"
        app:layout_constraintStart_toEndOf="@id/countryCodeTextview"
        android:contentDescription="@string/flag"/>

</androidx.constraintlayout.widget.ConstraintLayout>