<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.anilson.chesshealthexam.ui.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_addPersonDialog"
            app:destination="@id/addPersonDialog" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.anilson.chesshealthexam.ui.SecondFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_second">

        <argument
            android:name="@string/argument_title"
            app:argType="string" />

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <dialog
        android:id="@+id/addPersonDialog"
        android:name="com.anilson.chesshealthexam.ui.AddPersonDialog"
        android:label="@string/add_person" />

    <action
        android:id="@+id/action_global_FirstFragment"
        app:destination="@id/FirstFragment" />
</navigation>